<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shupro.oa.admin.dao.SysDeptMapper" >
  	<resultMap id="BaseResultMap" type="com.shupro.oa.admin.model.SysDept" >
		<id column="id" property="id"/>
		<result column="deptid" property="deptid"/>
		<result column="name" property="name"/>
		<result column="pid" property="pid"/>
		<result column="levels" property="levels"/>
		<result column="createtime" property="createtime"/>
		<result column="description" property="description"/>
		<result column="sotid" property="sotid"/>
		<result column="state" property="state"/>
	</resultMap>
       
	<sql id="Base_Column_List" >
		 id,deptid,name,pid,levels,createtime,description,sotid,state
	</sql>
   
	<!-- 动态查询条件 -->
	<sql id="Example_Where_Clause">
	where isenable=1
	<trim suffixOverrides="," >
		<if test="id != null and id != '' ">
		    and id = #{id}
		</if>
		<if test="deptid != null and deptid != '' ">
		    and deptid like CONCAT('%',#{deptid},'%')
		</if>
		<if test="name != null and name != '' ">
		    and name like CONCAT('%',#{name},'%')
		</if>
		<if test="pid != null and pid != '' ">
		    and pid = #{pid}
		</if>
		<if test="levels != null and levels != '' ">
		    and levels = #{levels}
		</if>
		<if test="createtime != null and createtime != '' ">
		    and createtime = #{createtime}
		</if>
		<if test="description != null and description != '' ">
		    and description = #{description}
		</if>
		<if test="sotid != null and sotid != '' ">
		    and sotid = #{sotid}
		</if>
	
	</trim>
	</sql>
 
	<!-- 根据id查询  -->
	<select id="selectById"  resultMap="BaseResultMap" parameterType="java.lang.Integer">
		select <include refid="Base_Column_List" /> 
	 from sys_dept where id = #{id} and isenable=1
	</select>
	
	<!-- 根据pid查询  -->
	<select id="selectByPid"  resultMap="BaseResultMap" parameterType="java.lang.String">
		select <include refid="Base_Column_List" /> 
	 from sys_dept 
	 where pid = #{pid} and isenable=1
	</select>

	<!-- 条件查询所有(分页拦截的也是这个语句) -->
	<select id="selectAll4Page" resultMap="BaseResultMap" parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from sys_dept
		<include refid="Example_Where_Clause"/>
	</select>
   
	<!-- 插入记录 -->
	<insert id="insert" parameterType="com.shupro.oa.admin.model.SysDept" >
	  insert into sys_dept(id,deptid,name,pid,levels,createtime,description,sotid)
 values(#{id},#{deptid},#{name},#{pid},#{levels},#{createtime},#{description},#{sotid})
	</insert>

	<!-- 根据id，修改记录-->  
	 <update id="update" parameterType="com.shupro.oa.admin.model.SysDept" >
	  update sys_dept set deptid=#{deptid},name=#{name},pid=#{pid},levels=#{levels},description=#{description},sotid=#{sotid} where id=#{id}
	 </update>
 
	 <!-- 动态修改记录，只修改只不为空的字段 -->
	<update id="updateSelective" parameterType="com.shupro.oa.admin.model.SysDept" >
		update sys_dept set 
	<trim  suffixOverrides="," >
	<if test="deptid != null  and deptid != '' ">
		deptid=#{deptid},
	</if>
	<if test="name != null  and name != '' ">
		name=#{name},
	</if>
	<if test="pid != null  and pid != '' ">
		pid=#{pid},
	</if>
	<if test="levels != null  and levels != '' ">
		levels=#{levels},
	</if>
	<if test="createtime != null  ">
		createtime=#{createtime},
	</if>
	<if test="description != null  and description != '' ">
		description=#{description},
	</if>
	<if test="sotid != null  ">
		sotid=#{sotid},
	</if>
	<if test="isenable != null  ">
		isenable=#{isenable},
	</if>
	</trim> where id=#{id}
	</update>

	<!-- 删除记录 (部门数据最好是逻辑删除)
	<delete id="deleteById" parameterType="com.shupro.oa.admin.model.SysDept" >
		delete 	 from sys_dept where id = #{id}
	</delete>
  	-->
</mapper>
